@using Microsoft.AspNetCore.Identity
@using eTickets.Core.Entities
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="btn btn-outline-primary my-2 my-sm-0" asp-area="Identity" asp-page="/Account/Register">  <i class="bi bi-person-plus"></i>Register</a>
    </li>
        <span style="padding: 5px;"></span>
    <li class="nav-item">
        <a class="btn btn-outline-success my-2 my-sm-0" asp-area="Identity" asp-page="/Account/Login"> <i class="bi bi-box-arrow-in-right"></i> Login</a>
    </li>
}
</ul>
 